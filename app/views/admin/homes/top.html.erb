  <div class="container">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">

      <h3>コメント一覧</h3><br>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
        <div class="comment-table">
          <table class="table">
            <thead>
              <tr>
                <th>投稿時刻</th>
                <th>レシピ名(レシピID)</th>
                <th>コメント内容</th>
                <th>投稿者（ユーザーネーム/本名）</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @comments.each do |comment| %>
                <tr>
                  <td><%= link_to comment.created_at.strftime("%Y-%m-%d %H:%M:%S"), user_recipe_path(comment.recipe.id), style: "font-family: HiraMinPro-W6; color: #000000; margin: 30px 0;" %></td>
                  <td><%= comment.recipe.name %>(ID:<%= comment.recipe_id %>)</td>
                  <td><%= comment.comment %></td>
                  <td><%= comment.user.user_name %>(<%= comment.user.last_name + " " + comment.user.first_name %>)</td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>