<h1>コメント一覧</h1>


  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
    <div class="order-table">
      <table class="table">
        <tbody>
          <% @comments.each do |comment| %>
            <tr>
              <td><%= link_to comment.created_at.strftime("%Y-%m-%d %H:%M:%S"), root_path, style: "font-family: HiraMinPro-W6; color: #000000; margin: 30px 0;" %></td>
              <td><%= comment.recipe.name %>(ID:<%= comment.recipe_id %>)</td>
              <td><%= comment.comment %></td>
              <td><%= comment.user.user_name %>(<%= comment.user.last_name + " " + comment.user.first_name %>)</td>
              <td><%#= comment.order_details.sum(:amount) %></td>
              <td>
                <%#= @recipe.post_status_i18n %>

              </td>
                </tr>
                <% end %>
          </tbody>
        </table>

