  <div class="container">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
        <h3>レシピ一覧</h3><br>
      </div>
    </div>

    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>レシピ名</th></th>
          <th>ジャンル</th>
          <th>いいね件数</th>
          <th>コメント件数</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @recipes.order("id DESC").each do |recipe| %>
          <tr>
            <td><%= recipe.id %></td>
            <td><%= link_to user_index_path(recipe.id), style: "font-family: HiraMinPro-W6; color: #000000; margin: 30px 0;" do %>
            <%= recipe.name %>
            <% end %></td>
            <td><%= recipe.genre.genre_name %></td>
            <td><%= recipe.favorites.count %></td>
            <td><%= recipe.comments.count %></td>
            <td></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @recipes, style: "font-family: HiraMinPro-W6; color: #000000; margin: 30px 0;" %>
    </div>