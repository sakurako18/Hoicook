  <div class="container">
    <div class="row">
      <div class="col-md-8 col-xl-8 mx-auto">
        <h3>ジャンル編集</h3>
        <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
          <div><%= f.label :"ジャンル名", class: "mr-3" %></div>
          <div><%= f.text_field :name, class: "mr-5" %></div>
          <div style="margin-top: 20px;"><%= f.submit "変更を保存", class: "btn btn-primary" %></div>
        <% end %>
      </div>
    </div>
  </div>