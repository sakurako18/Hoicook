  <div class="container">
    <div class="row">
      <div class="col-md-8 col-xl-8 mx-auto">
      <h2>ジャンル一覧・追加</h2>

  <%=form_with model: @genre,url: admin_genres_path, method: :post do |f| %>

  <td><%= f.label :"ジャンル名", class: "mr-3" %></td>
  <td><%= f.text_field :name, class: "mr-5" %></td>
  <td><%= f.submit'新規登録',class: "btn btn-success" %></td>

  <% end %>

        <table class="table">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th> </th>
            </tr>
              <% @genres.each do |genre| %>
          </thead>
          <tbody>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
                  <%= link_to "削除",admin_genre_path(genre.id), method: :delete, class: "btn btn-danger" %></td>
           </tr>
           </tbody>
              <%end%>
        </table>
      </div>
    </div>
  </div>