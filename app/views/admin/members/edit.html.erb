  <div class="container">
    <div class="row">
      <div class="col-xs-9 col-xs-offset-1">
      <h3><%= @user.last_name + @user.first_name %>さんの会員情報</h3>

    <%=form_with model: @user,url: admin_member_path, method: :patch do |f| %>

    <table class=table-borderess>
      <tr>
        <td>
          <div class="field">
            ユーザーID
          </div>
        </td>
        <td>
        <%= @user.id %>
        </td>
      <tr>
        <td>ユーザーネーム</td>
        <td><%= f.text_field :user_name, class: "mr-5" %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= f.text_field :last_name, class: "mr-5" %> <%= f.text_field :first_name, class: "mr-5" %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= f.text_field :email, class: "mr-5" %></td>
      </tr>
      <tr>
        <td>会員ステータス</td>
        <td>
          <%= f.radio_button :is_deleted, :false %>有効
          <%= f.radio_button :is_deleted, :true %>退会<br>
        </td>
      </tr>
    </table>

    <%= f.submit "変更を保存", class: "btn btn-primary" %>
        <%end%>

      </div>
    </div>
  </div>