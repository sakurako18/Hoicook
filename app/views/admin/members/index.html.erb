  <div class="container">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">

      <h3>ユーザー一覧</h3><br>
      </div>
    </div>

      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>ユーザーネーム</th>
            <th>氏名</th>
            <th>メールアドレス</th>
          </tr>
        </thead>
        <tbody>
            <% @users.order("id DESC").each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.user_name %></td>
                <td><%= link_to admin_member_path(user.id), style: "font-family: HiraMinPro-W6; color: #000000; margin: 30px 0;" do %>
                    <%= user.last_name %> <%= user.first_name %>
                    <% end %>
                </td>
                <td><%= user.email %></td>
                <td>
                  <% if user.is_deleted == false %>
                    有効
                  <% else %>
                    退会
                  <% end %>
                </td>
              </tr>
                <% end %>
          </tbody>
      </table>
    <%= paginate @user, style: "font-family: HiraMinPro-W6; color: #000000; margin: 30px 0;" %>
  </div>