  <div class="container">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
              <h3>マイページ</h3>

      <div class="table-responsive">
        <div class="comment-table">
          <table class="table">
            <tbody>
              <tr>
                <th>ユーザーネーム</th>
                <td><%= @user.user_name %></td>
              </tr>
              <tr>
                <th>氏名</th>
                <td><%= @user.last_name %> <%= @user.first_name %></td>
              </tr>
              <tr>
                <th>メールアドレス</th>
                <td><%= @user.email %></td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="col-md-auto ml-auto">
          <%= link_to "編集する", edit_user_member_path(@user), class: "col-xs-12 btn btn-success"%>
        </div>
        <br>
      </div>
      <div>
        <span><h3>投稿コメント一覧</h3></span>
        <div class="comment-table">
          <table class="table">
            <thead>
              <tr>
                <th>レシピ名(レシピID)</th>
                <th>コメント内容</th>
                <th>投稿時刻</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @comments.each do |comment| %>
                <tr>
                  <td><%= link_to comment.recipe.name, user_recipe_path(comment.recipe.id), style: "font-family: HiraMinPro-W6; color: #000000; margin: 30px 0;" %>(ID:<%= comment.recipe_id %>)</td>
                  <td><%= comment.comment %></td>
                  <td><%= comment.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
                  <td></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  </div>
