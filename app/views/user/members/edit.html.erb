  <div class="container">
    <div class="row">
      <div class="col-md-8 col-xl-8 mx-auto">
      <h3>登録情報の編集</h3>
      <%= form_with(model:@user, url:user_member_path ,method: :patch) do |f| %>

          <div class="col-xs-12">
            <%= f.label :"氏名", class: "col-sm-3 control-label", style: "margin: 10px;" %>
            <%= f.text_field :last_name, class: "last_name col-sm-3 form-control-static name", style: "margin: 10px;" %>
            <%= f.text_field :first_name, class: "first_name col-sm-3 form-control-static name", style: "margin: 10px;" %>
          </div>

          <div class="col-xs-12">
            <%= f.label :"ユーザーネーム", class: "col-sm-3 control-label", style: "margin: 10px;" %>
            <%= f.text_field :user_name, class: "last_name col-sm-3 form-control-static name", style: "margin: 10px;" %>
          </div>
          <div class="col-xs-12">
            <%= f.label :"メールアドレス", class: "col-sm-3 control-label", style: "margin: 10px;" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-6 form-control-static", style: "margin: 10px;" %>
          </div>

        </div>

        <div class="actions col-xs-10 col-xs-offset-2">
            <%= f.submit "保存する", class: "btn btn-primary", style: "margin: 10px;" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>