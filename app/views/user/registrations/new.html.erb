  <div class="container">
    <div class="row">
        <div class="col-xs-9 col-xs-offset-1">
        <h3>新規会員登録</h5>

  <%= form_with model: @user, url: registration_path(resource_name) do |f| %>
    <%= render "user/shared/error_messages", resource: resource %>

    <table class=table-borderess>
      <thead>
        <tr>
          <th>
            ユーザーネーム
          </th>
            <td>
            </td>
            <td>
              <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name" %>
            </td>
        </tr>

        <tr>
          <th>
            名前
          </th>
            <td>
              <div class="field">
                <%= f.label :"(姓)" %>
              </div>
            </td>
            <td>
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
            </td>
            <td>
              <div class="field">
                <%= f.label :"(名)" %>
              </div>
            </td>
            <td>
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
            </td>
         </tr>

          <tr>
            <th>
              メールアドレス
            </th>
              <td>
              </td>
              <td>
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </td>
          </tr>

          <tr>
            <th>
              <div class="field">
                <% if @minimum_password_length %>
                <em>パスワード(<%= @minimum_password_length %> 文字以上) </em>
                <% end %>
              </div>
            </th>
              <td>
              </td>
              <td>
                <%= f.password_field :password, autocomplete: "new-password" %>
              </td>
          </tr>

          <tr>
            <th>
              <div class="field">
                <%= f.label :"パスワード(確認用)" %><br />
              </div>
            </th>
              <td>
              </td>
              <td>
                <%= f.password_field :password, autocomplete: "new-password" %>
              </td>
          </tr>

            </th>
              <td>
                <div class="actions">
                  <%= f.submit "新規登録", class: "btn btn-success" %>
                </div>
              </td>
          </tr>
      </thead>
    </table>

  <% end %>

    <h5>既に登録済みの方</h5>
    <%= link_to 'こちら', new_user_session_path, style: "font-family: HiraMinPro-W6; color: #000000; margin: 30px 0;" %>  からログインしてください。
