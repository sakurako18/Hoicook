  <div class="container">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
      <h2>レシピ一覧</h2>

      <div class="text-right">
          <%= link_to "新規登録", new_user_recipe_path, class:"btn btn-lg btn-success" %>
      </div>

        <table class="table">
          <thead>
            <tr>
              <th>レシピID</th>
              <th>レシピ名</th></th>
              <th>ジャンル</th>
            </tr>
          </thead>
          <tbody>
            <% @recipes.order("id DESC").each do |recipe| %>
              <tr>
                <td><%= recipe.id %></td>
                <td><%= link_to user_recipe_path(recipe), style: "font-family: HiraMinPro-W6; color: #000000; margin: 30px 0;" do %>
                <%= recipe.name %>
                <% end %></td>
                <!--<td><%#= recipe.genre.name %></td>-->
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
          </div>
          <%= paginate @recipes, style: "font-family: HiraMinPro-W6; color: #000000; margin: 30px 0;" %>
      </div>
    </div>
  </div>