  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-2">
        <%= render '/user/recipes/genre', recipe: @recipe %>
      </div>

      <div class="col-md-9 offset-md-1">
        <p><font color=”#008000”><%= flash[:notice] %></font></p>
        <h3>レシピ一覧</h3>(全<%= @recipes.count %>件)

        <div class="row">
          <% @recipes.each do |recipe| %>

          <div class="col-md-3 p-4">

            <%= link_to recipe_path(recipe.id) do %>
              <% if recipe.image.attached? %>
                <%= image_tag recipe.image, class: 'img-fluid', style: 'width: 100%; height: 200px; object-fit: cover;' %>
              <% else %>
                <%= image_tag 'no_image.png', class: 'img-fluid', style: 'width: 100%; height: 200px; object-fit: cover;' %>
              <% end %>
            <% end %>
            <div><%= recipe.recipe_name %>(<%= recipe.genre.genre_name %>)</div>
            <div><i class="far fa-calendar-plus"></i> <%= recipe.created_at.strftime("%Y-%m-%d") %></div>

          </div>
            <% end %>
        </div>
        <%= paginate @recipes %>
      </div>
    </div>
  </div>